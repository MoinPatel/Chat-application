doctype html
html

  head

    meta(charset="utf-8")

    meta(http-equiv="X-UA-Compatible", content="IE=edge")

    title Chat with username using Node.js and socket.io

    meta(name="description", content="Hello World")

    meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, minimal-ui")

    link(rel="stylesheet", href="assets/styles/main.css", type="text/css")

    link(href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css')

  body

    .wrapper
      h1 Quick Chat

      div.nickwrap
        p Enter a username:
        //p#nickError
        div#setNick
          input#nickname(size='35')
          button.rename Submit

      div.textBox
     
      h1 Messages
      div.messages
      div.users
        h3 Available users
      input#messageinput(type="text" placeholder="Enter your message")
        
      button(class="btn") Send a Message

      

    script(type="text/javascript", src="https://code.jquery.com/jquery-2.1.1.min.js")

    script(type="text/javascript", src="https://cdn.socket.io/socket.io-1.1.0.js")

    script(type="text/javascript", src="assets/scripts/main.js")
